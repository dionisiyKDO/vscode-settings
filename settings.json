{
  "editor.quickSuggestions": {
      "strings": true
    },
  
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    
    "workbench.colorTheme": "rose-pine-nvchad-theme",
    "workbench.iconTheme": "eq-material-theme-icons-darker",
    
    "window.titleBarStyle": "custom",
    "window.commandCenter": false,
    "window.menuBarVisibility": "toggle",
  
    // "tailwind-fold.foldStyle": "line", // (?????) don't know possible values, but this not too bad 
    "tailwind-fold.autoFold": true,
  
    "jupyter.askForKernelRestart": false,
    
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.openRepositoryInParentFolders": "never",
    
    "glassit.alpha": 255,
    
    "indentRainbow.indicatorStyle": "light",
    "indentRainbow.errorColor": "none",
    "indentRainbow.lightIndicatorStyleLineWidth": 1,
    "indentRainbow.colors": [
      "rgba(255,255,64,0.3)",
      "rgba(127,255,127,0.3)",
      "rgba(255,127,255,0.3)",
      "rgba(79,236,236,0.3)",
    ],
    "tabnine.experimentalAutoImports": true,
    "svelte.enable-ts-plugin": true,
    "workbench.startupEditor": "none",
    "files.exclude": {
      "**/__pycache__/": true,
      "**/.svelte-kit/": true,
      "**/node_modules/": true
    },
    "explorer.fileNesting.patterns": {
      "*.ts": "${capture}.js",
      "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
      "*.jsx": "${capture}.js",
      "*.tsx": "${capture}.ts",
      "tsconfig.json": "tsconfig.*.json",
      "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
      "*.sqlite": "${capture}.${extname}-*",
      "*.db": "${capture}.${extname}-*",
      "*.sqlite3": "${capture}.${extname}-*",
      "*.db3": "${capture}.${extname}-*",
      "*.sdb": "${capture}.${extname}-*",
      "*.s3db": "${capture}.${extname}-*"
    },
    "vscode-pets.petSize": "small",
    "vscode-pets.throwBallWithMouse": true,
    "prettier.tabWidth": 4,
    "[svelte]": {
      "editor.defaultFormatter": "svelte.svelte-vscode"
    },
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "python.createEnvironment.trigger": "off",
    "workbench.sideBar.location": "right",
    "[css]": {
      "editor.defaultFormatter": "aeschli.vscode-css-formatter"
    },
    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "python.locator": "js",
    "[python]": {
      "editor.defaultFormatter": "charliermarsh.ruff"
    },
  
  }